const fruits = [];
fruits[0]="apple";
fruits[1]="grapes";
fruits[2]="banana";


fruits[4]="kiwi";
fruits[3]="mango"
console.log(fruits.length);

//new keyword

const friends = new Array("john","bob","gracy");
console.log(friends);

friends[3] = "rishi";

console.log(friends)


const bestFriend = friends[1];
console.log("my best friend is " +bestFriend);

//arrays are special type of objects

console.log(typeof(friends)) //objects

friends[4]= fruits

console.log(friends);
console.log(friends[4][2] , friends[4][3]); //2 dimensional array

console.log(friends[0] + " likes " + friends[4][2] + " and " +friends[2] + " likes " + friends[4][3])
//string or template literals

console.log(`${friends[0]} likes ${friends[4][2]} and ${friends[2]} likes ${friends[4][3]}`)
// ``${}

console.log(`my bestfrnd is ${bestFriend}`);




//access last element of the array;
console.clear();
console.log(fruits[fruits.length-1]);

//add an element to array
fruits.push("lemon");
console.log(fruits)
fruits.pop();
console.log(fruits)
fruits.unshift("lemon");
console.log(fruits);
console.log(fruits[2]);

fruits.shift();
console.log(fruits);

delete fruits[3];
console.log(fruits);
